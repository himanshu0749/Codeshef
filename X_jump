import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner sc = new Scanner(System.in);
		int t=sc.nextInt();
		for(int i=0;i<t;i++)
		{
		    int x=sc.nextInt();
		    int y=sc.nextInt();
		    int sum=0;
		    int c=0;
		    while(sum<x)
		    {
		        if(sum+y<=x)
		        sum=sum+y;
		        else sum=sum+1;
		        c++;
		    }
		    System.out.println(c);
		}

	}
}
